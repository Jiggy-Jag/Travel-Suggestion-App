<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mountain_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_round_button"
            android:onClick="openActivityLoginScreen"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            android:alpha="0.5"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="241dp"
            android:layout_height="164dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:contentDescription="logo"
            android:src="@drawable/logo"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btnLetMeChoose"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@drawable/custom_round_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:onClick="openActivityLetMeChoose"
                android:text="@string/let_me_choose"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:alpha="0.5"/>

            <Button
                android:id="@+id/btnHelpMePick"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_round_button"
                android:fontFamily="sans-serif-medium"
                android:onClick="openActivityHelpMeChoose"
                android:text="@string/help_me_pick"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:alpha="0.5"/>

            <Button
                android:id="@+id/btn_browse"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:alpha="0.5"
                android:background="@drawable/custom_round_button"
                android:fontFamily="sans-serif-medium"
                android:onClick="openActivityBrowseContinents"
                android:text="@string/browse"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/jsonParse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openJSONParseActivity"
                android:background="@drawable/custom_round_button"
                android:text="@string/json_parse"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.5"/>

        </LinearLayout>

        <Button
            android:id="@+id/http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openHTTPActivity"
            android:background="@drawable/custom_round_button"
            android:textColor="#FFFFFF"
            android:text="@string/http"
            android:alpha="0.5"/>

        <Button
            android:id="@+id/btn_RateUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_round_button"
            android:onClick="openRatingActivity"
            android:text="@string/rate_us"
            android:textColor="#FFFFFF"
            android:alpha="0.5"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>